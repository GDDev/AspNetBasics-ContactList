@model IEnumerable<ContactApp.Models.Contact>

<h2>Contacts</h2>

<a href="/Contacts/Create">Add Contact</a>

<table>
    <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>

    @foreach (var c in Model)
    {
        <tr>
            <td>@c.name</td>
            <td>@c.phoneNumber</td>
            <td>
                <a href="/Contacts/Edit/@c.id">Edit</a>
                <a href="/Contacts/Delete/@c.id">Delete</a>
            </td>
        </tr>
    }
</table>
